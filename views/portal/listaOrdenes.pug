.container.divLista
 ul.list-group.list-group-flush
            if ordenes.length>0
             each o in ordenes
              if validar==1 
               a(class="link-offset-2 link-underline link-underline-opacity-0" href=`http://localhost:3000/tecBioq/ordenExamenes/${o.id}?validar=${validar?1:0}` onclick="if(event.target.closest('button')){event.preventDefault();}")
                li.list-group-item.list-group-item-action
                 div
                  // Botón "validar orden" en la esquina superior derecha, en dos renglones
                  // Ahora, si se hace click en el botón, no navega al link del <a>
                  div(style="position: absolute; top: 8px; right: 16px; z-index: 2;")
                    button(
                      type="button"
                      class="btn btn-primary btn-sm"
                      style="white-space: pre-line; font-size: 0.95rem; padding: 4px 8px; line-height: 1.1; text-align: center;"
                      onclick=`mostrarModalValidar(${o.id})`
                    )
                      | Validar
                      br
                      | orden

                  p 
                   | #{o.id || ''} #{o.Paciente.Usuario.nombre || ''} #{o.Paciente.Usuario.apellido || ''}
                  each e in o.Examens 
                   p= `${e.nombre} (${e.Muestra.nombre}) ${(e.OrdenExamen && e.OrdenExamen.UsuarioId) ? "✅" : "⬜"}`
               
              else 
               li.list-group-item.list-group-item-action
                 div
                  p 
                   | #{o.id || ''} #{o.Paciente.Usuario.nombre || ''} #{o.Paciente.Usuario.apellido || ''}
                  each e in o.Examens 
                   p  
                    a(class="link-offset-2 link-underline link-underline-opacity-0" href=`http://localhost:3000/tecBioq/ordenExamen/${o.id}/${e.id}?validar=${validar?1:0}`)= `${e.nombre} (${e.Muestra.nombre})${(e.OrdenExamen && e.OrdenExamen.UsuarioId) ? "✅" : "⬜"}`    
             - for(let i=ordenes.length; i<limit;i++)
               li.list-group-item.list-group-item-action &nbsp;
             if totalRegistros
               include ../paginado.pug
               +paginado('http://localhost:3000/tecBioq/ordenes')
            else  
             li.list-group-item.list-group-item-action
                 div
                  p No se encontraron ordenes