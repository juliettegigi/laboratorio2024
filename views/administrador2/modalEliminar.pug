mixin modalEliminar(id, modalTitle,modalBody,action)
  div(class="modal fade" tabindex="-1" id=`${id}` aria-hidden="true")
    div(class="modal-dialog modal-dialog-centered ")
      div(class="modal-content")
        div(class="modal-header")
          h5(class="modal-title")= modalTitle
          button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
        div(class="modal-body")
          p= modalBody
        div(class="modal-footer")
         form(action=`${action}` method="post")
          button(type="submit" class="btn btn-secondary" data-bs-dismiss="modal") Eliminar
          button(type="button" class="btn btn-primary") Cancelar