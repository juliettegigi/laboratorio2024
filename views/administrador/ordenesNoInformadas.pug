.div(id="divOrdenesNoInformadas" class="oculto ")
    each orden in ordenes
        .card.m-2( class="card-flip")
            .card-body.front
                 h5.card-title= `Orden: ${orden.id}`
                 p.card-text= `Fecha: ${new Date(orden.fecha).toLocaleDateString('es-AR')}`
                 p.card-text= `Medico: ${orden.medico.nombre}`
                 p.card-text= `Estado: ${orden.estado.nombre}`
                 p.card-text= `Diagn√≥stico: ${orden.diagnostico.codigo}-${orden.diagnostico.diagnostico}`

            .div.card-footer.front
             table.table.card-text
                 caption Muestras requeridas
                 thead
                     tr
                         th Muestra
                         th Presentada
                 tbody
                     each muestra in orden.muestrasRequeridas
                         tr(class=muestra.isPresentada ? '' : 'not-presented')
                             td= muestra.muestra
                             td= muestra.isPresentada ? "si" : "no"
             button.btn.btn-primary.card-btn-editar(onclick="flipCard(this)") Editar
            .card-body.back
                - const edit=true
                +formOrden("divFormOrden2", true,orden)                
                

